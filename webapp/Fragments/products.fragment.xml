<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog title="{i18n>product}">
		<f:SimpleForm layout="ResponsiveGridLayout" >
			<Label text="{i18n>id}"></Label>
			<Input id="id" ></Input>
			<Label text="{i18n>release}"></Label>
			<DatePicker id="relDate" ></DatePicker>
			<Label text="{i18n>discontinue}"></Label>
			<DatePicker id="disDate"></DatePicker>
			<Label text="{i18n>price}"></Label>
			<Input id="price"></Input>
			<Label text="{i18n>rating}"></Label>
			<Input id="rating" ></Input>
		</f:SimpleForm>
		<beginButton>
			<Button text="save" press="onSave"></Button>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCancel"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>